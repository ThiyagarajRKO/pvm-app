# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.myrameswaramtrip.com
NEXT_PUBLIC_GATEWAY_URL=https://gateway.myrameswaramtrip.com
NEXT_PUBLIC_WS_URL=wss://gateway.myrameswaramtrip.com/ws

# Port Configuration
PORT=3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# VAPID key for FCM web push notifications
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key

# Development URLs (uncomment for local development)
# NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
# NEXT_PUBLIC_GATEWAY_URL=http://localhost:8000
# NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws